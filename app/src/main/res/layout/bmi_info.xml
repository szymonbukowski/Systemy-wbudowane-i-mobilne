<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BmiInfoActivity" android:id="@+id/testTV"
        android:screenOrientation="portrait">

    <TextView
            android:text="18.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inf_BmiResult"
            android:layout_marginTop="@dimen/inf_bmiResult_margin_t"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/inf_bmiResult_textSize" android:layout_marginLeft="@dimen/inf_bmiResult_margin_l"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="@dimen/inf_ratingbar_height" android:id="@+id/ratingBar"
            android:layout_alignBottom="@+id/inf_BmiResult" android:layout_marginEnd="@dimen/inf_ratingbar_margin_e"
            android:layout_alignParentEnd="true" android:layout_alignTop="@+id/inf_BmiResult"/>
    <TextView
            android:text="desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/inf_bmiDescription" android:layout_marginTop="@dimen/inf_description_margin_t"
            android:layout_below="@+id/ratingBar"/>
</RelativeLayout>