<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BmiInfoActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/inf_BmiResult" android:layout_marginTop="38dp"
            android:layout_alignParentTop="true" android:textSize="30sp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="45dp" android:id="@+id/ratingBar"
            android:layout_marginStart="48dp" android:layout_toEndOf="@+id/inf_BmiResult"
            android:layout_marginBottom="0dp"
            android:layout_alignBottom="@+id/inf_BmiResult"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="60dp"
            android:layout_below="@+id/inf_BmiResult"/>
</RelativeLayout>