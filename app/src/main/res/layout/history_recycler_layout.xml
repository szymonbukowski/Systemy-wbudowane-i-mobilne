<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
            android:id="@+id/rcv_bmiResult"
            android:text="25.00"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:autoSizeTextType="uniform"
            android:layout_marginLeft="20dp"
            android:maxHeight="100dp"
            android:gravity="center"
            android:textAllCaps="false" android:textStyle="bold"/>
    <TextView
            android:id="@+id/rcv_category"
            android:text="@string/normal_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rcv_bmiResult"
            android:layout_marginLeft="@dimen/rcv_elements_margin_tblr"
            android:layout_marginTop="@dimen/rcv_elements_margin_tblr" android:layout_alignTop="@+id/rcv_bmiResult"
            android:textStyle="bold"/>
    <TextView
            android:text="Mass"
            android:layout_width="@dimen/rcv_TV_width"
            android:layout_height="wrap_content" android:id="@+id/rcv_mass" android:layout_toEndOf="@+id/rcv_bmiResult"
            android:layout_marginStart="@dimen/rcv_elements_margin_tblr"
            android:layout_marginTop="@dimen/rcv_elements_margin_tblr"
            android:layout_below="@+id/rcv_category" android:textStyle="bold"/>
    <TextView
            android:text="200"
            android:layout_width="@dimen/rcv_TV_width"
            android:layout_height="wrap_content" android:id="@+id/rcv_mass_value" android:layout_toEndOf="@+id/rcv_mass"
            android:layout_marginStart="@dimen/rcv_elements_margin_tblr" android:layout_marginBottom="0dp"
            android:layout_alignBottom="@+id/rcv_mass"/>
    <TextView
            android:text="Height"
            android:layout_width="@dimen/rcv_TV_width"
            android:layout_height="wrap_content" android:id="@+id/rcv_height"
            android:layout_toEndOf="@+id/rcv_bmiResult"
            android:layout_marginStart="@dimen/rcv_elements_margin_tblr"
            android:layout_marginTop="@dimen/rcv_elements_margin_tblr" android:layout_below="@+id/rcv_mass"
            android:textStyle="bold"/>
    <TextView
            android:text="100"
            android:layout_width="@dimen/rcv_TV_width"
            android:layout_height="wrap_content" android:id="@+id/rcv_height_value" android:layout_toEndOf="@+id/rcv_height"
            android:layout_marginStart="@dimen/rcv_elements_margin_tblr"
            android:layout_marginBottom="@dimen/rcv_label_value_tb"
            android:layout_alignBottom="@+id/rcv_height"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView"
            android:layout_marginEnd="@dimen/rcv_elements_margin_tblr" android:layout_alignParentEnd="true" android:layout_marginTop="@dimen/rcv_elements_margin_tblr"
            android:layout_marginStart="@dimen/rcv_elements_margin_tblr" android:layout_marginBottom="@dimen/rcv_elements_margin_tblr"/>
</RelativeLayout>